#define PinoTrigger 5   //O Trigger emite o pulso
#define PinoEcho 18      //O Echo recebe o pulso

int duracao = 0;
int distancia = 0;
int pessoasDentro = 0;
int distanciaPorta = 0;

void setup ()
{
pinMode(PinoTrigger,OUTPUT);
pinMode(PinoEcho,INPUT);
Serial.begin(115200);
}

void loop()
{
digitalWrite(PinoTrigger, HIGH);
delayMicroseconds(10);
digitalWrite(PinoTrigger,LOW);
  
duracao = pulseIn(PinoEcho, HIGH); //Armazena o valor lido
distancia = duracao*0.017175;
Serial.print(distancia);
Serial.println("cm");  
  if(distanciaPorta == 0) {
    distanciaPorta = distancia - 2;
  }  
  if(distancia < distanciaPorta) {
  	pessoasDentro++;
    Serial.println(pessoasDentro);
  }
delay(100);
}
